<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.InforToPostActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_infor_post"
        android:background="@drawable/side_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.Toolbar>

    <TextView
        android:textSize="30dp"
        android:gravity="center"
        android:text="Thông tin bài đăng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:padding="5dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Ảnh chi tiết nhà trọ cho thuê:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_infor_post1"
                    android:scaleType="fitXY"
                    android:src="@drawable/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/image_infor_post2"
                    android:scaleType="fitXY"
                    android:src="@drawable/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/image_infor_post3"
                    android:scaleType="fitXY"
                    android:src="@drawable/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>
            <TextView
                android:text="Địa chỉ:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Diện tích:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_Area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Tiền điện:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_Electric_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Tiền nước:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_water_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Mô tả thêm:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_centerHorizontal="true"
                    android:background="@color/button"
                    android:id="@+id/btn_dang_tin"
                    android:text="Đăng tin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>