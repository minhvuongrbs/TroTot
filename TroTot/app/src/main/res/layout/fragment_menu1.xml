<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trotot.dnvn.cndd.trotot.Navi.menu1.Menu1Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background=
            android:orientatSpinnerion="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <
                android:id="@+id/spinner_location"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:text="Đà Nẵng"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="50dp" />
            <Spinner
                android:layout_marginLeft="100dp"
                android:id="@+id/spinner_rate"
                android:singleLine="true"
                android:text="Đà Nẵng"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/vien"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:hint="@string/question_post"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/btn_dang_bai"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_button_post"
                android:layout_marginRight="@dimen/margin_button_post"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng Tin Ngay"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:background="@drawable/vien"
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>
