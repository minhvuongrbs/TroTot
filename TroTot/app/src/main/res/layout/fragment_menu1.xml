<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trotot.dnvn.cndd.trotot.Fragment.Menu1Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#E43F3F"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Spinner
                android:id="@+id/spinner_rate"
                android:singleLine="true"
                android:text="Đà Nẵng"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="50dp" />
            <ImageView
                android:padding="8dp"
                android:layout_marginLeft="130dp"
                android:id="@+id/btn_search"
                android:scaleType="fitCenter"
                android:src="@drawable/search"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/vien"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:hint="Bạn có phòng cho thuê?"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/btn_dang_bai"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_button_post"
                android:layout_marginRight="@dimen/margin_button_post"
                android:background="@color/button_post"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng Tin Ngay"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:background="@drawable/vien"
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>
