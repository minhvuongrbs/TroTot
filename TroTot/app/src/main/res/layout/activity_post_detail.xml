<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PostDetailActivity"
    android:id="@+id/activity_post_detail">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_detail_third_toolbar">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_below="@id/post_detail_third_toolbar"
        android:id="@+id/post_detail_slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/room2"
        android:scaleType="fitXY"
        />

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:layout_below="@+id/post_detail_slider"-->
        <!--android:id="@+id/post_detail_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:elevation="6dp"-->
        <!--android:minHeight="?attr/actionBarSize"-->
        <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->

    <android.support.design.widget.TabLayout
        app:tabTextColor="#fff"
        android:id="@+id/post_detail_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_detail_slider"
        android:background="@color/tab_layout_post"/>
        <!--android:elevation="6dp"-->
        <!--android:minHeight="?attr/actionBarSize"-->
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/post_detail_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_detail_tab_layout" />
</RelativeLayout>